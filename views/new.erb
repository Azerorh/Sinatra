<h2>New post</h2>

<form action="/post/new" method="POST">
	<div class="form-group">
	    <label>Header: </label>
	    <input type="text" class="form-control" placeholder="Enter your header" name="post[header]" value="<%= @post.header %>">
	</div>
	<div class="form-group">
	    <label>Content: </label>
	    <textarea class="form-control" placeholder="Enter your content" name="post[content]" value="<%= @post.content %>" rows='6'></textarea>
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>