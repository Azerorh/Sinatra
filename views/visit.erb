<h2>Visit</h2>

<p>Add new record</p>

<form action='/visit' method='POST'>
  
  <div class="form-group">
    <label>Name: </label>
    <input type="text" class="form-control" placeholder="Enter your name" name="client[name]" value="<%= @c.name %>">
  </div>

  <div class="form-group">
    <label>Phone: </label>
    <input type="text" class="form-control" placeholder="Enter your phone" name="client[phone]" value="<%= @c.phone %>">
  </div>

  <div class="form-group">
    <label>Date and time: </label>
    <input type="text" class="form-control" id="datetimepicker" name="client[datetime]" value="<%= @c.datetime %>">
  </div>

  <div class="form-group">
    <label>Choose your barber: </label>
    <select name="client[barber]" class="form-control barber">
      <% @barbers.each do |item| %>
    	  <option <%= @c.barber == item['name'] ? 'selected' : '' %>><%= item['name'] %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <select name="client[color]" class="colorpicker">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>
  
  <button type="submit" class="btn btn-primary">Create record</button>

</form>

<script type="text/javascript">
  
  $(function(){
    $('select.colorpicker').simplecolorpicker();

    jQuery('#datetimepicker').datetimepicker();

    $('.colorpicker option[value="<%= @c.color %>"]').attr('selected', 'true');

    $('.simplecolorpicker span').removeAttr('data-selected');
    $('.simplecolorpicker span[data-color="<%= @c.color %>"]').attr('data-selected', 'true');
  })

</script>